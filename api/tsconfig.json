{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "sourceMap": true,
    "outDir": "bin",
    "baseUrl": "./",
    "paths": {
      "Common": ["../common"],
      "Common/*": ["../common/*"],
      "Routes": ["src/routes"],
      "Routes/*": ["src/routes/*"],
      "Utils": ["src/utils"],
      "Utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "*.spec.ts"]
}
